@if (!string.IsNullOrWhiteSpace(this.Message))
{
  <div
    class="alert bottom alert-@this.Type.ToString().ToLower() @(this.Dismissible ? "alert-dismissible" : "") fade show"
    role="alert">

    @this.Message

    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      @if (this.Dismissible)
      {
        <span aria-hidden="true">&times;</span>
      }
    </button>
  </div>
}
