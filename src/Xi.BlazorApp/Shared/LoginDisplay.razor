<AuthorizeView>
  <Authorized>
    <form method="post" action="Identity/Account/LogOut">
      <button type="submit" class="nav-link btn btn-link">Log out @context.User?.Identity?.Name</button>
    </form>
  </Authorized>
  <NotAuthorized>
    <a href="Identity/Account/Login">Log in</a>
  </NotAuthorized>
</AuthorizeView>