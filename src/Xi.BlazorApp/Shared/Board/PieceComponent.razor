@inherits Fluxor.Blazor.Web.Components.FluxorComponent

@using Xi.Models.Game

@if (this.IsLastMovedPiece)
{
  <style>
  @@keyframes move {
    from {
      margin-left: @PreviousPixelPosition(true)px;
      margin-top: @PreviousPixelPosition(false)px;
    }
    to {
      margin-left: 0;
      margin-top: 0;
    }
  }
  </style>
}

@if (this.Piece != null)
{
  if (this.IsLastMovedPiece)
  {
    <img class="piece" src="@this.PieceUrl" alt="" style="animation-name: move; animation-fill-mode: forwards; animation-duration: 500ms;" />
  }
  else
  {
    <img class="piece" src="@this.PieceUrl" alt="" />
  }
}