@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<div class="wrapper">
  <span class="name">@this.Player.Name</span><span class="elo-points">@this.PotentialPoints()</span>

  @if (this.ShowClock)
  {
    <span class="clock">
      <ClockComponent ClockRunsOutAt="@this.GameModel.Game.ClockRunsOutAt!.Value" />
    </span>
  }
</div>