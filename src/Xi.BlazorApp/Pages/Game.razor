@page "/games/{gameId:int}"

@inherits Fluxor.Blazor.Web.Components.FluxorComponent

@if (this.GameState.Value.IsLoading)
{
  <p>Loading...</p>
}
else if (this.GameState.Value.HasCurrentErrors)
{
  <p>Computer says no... :(</p>
  <p>@GameState.Value.CurrentErrorMessage</p>
}
else if(GameState.Value.Game != null)
{
  <h1>Game @GameState.Value.Game!.Id</h1>

  <PlayerComponent Player="@GameState.Value.Game!.BlackPlayer"/>

  <p>TODO</p>

  <PlayerComponent Player="@GameState.Value.Game!.RedPlayer"/>
}